{
  "name": "crm-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --host --port 5173 --strictPort --open false",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron electron/main.js",
    "build": "vite build",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=production electron electron/main.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.1.0",
    "concurrently": "^9.2.1",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "vite": "^4.5.0",
    "wait-on": "^9.0.1"
  }
}